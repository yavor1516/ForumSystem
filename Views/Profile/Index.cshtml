@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using ForumSystem.Models
@model ProfileViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <!-- Existing head content -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

    <!-- Additional styling for the main section -->
    <style>
        main {
            background-color: #f0f8ff; /* Light blue background */
            padding: 20px 0;
        }

        h2 {
            color: #333;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-group label {
            font-weight: bold;
            color: #555;
        }

        .form-control {
            border-radius: 4px;
            border: 1px solid #ddd;
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1);
        }

            .btn-primary:hover {
                background-color: #0069d9;
                border-color: #0062cc;
            }

        .profile-pic {
            height: 100px;
            width: 100px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 15px;
        }

        .img-container {
            text-align: center;
            margin-bottom: 20px;
        }

        /* Initially hide all profile layouts */
        .profile-layout {
            display: none;
        }

        /* Style for the buttons */
        .toggle-button {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 15px;
            padding: 10px 20px;
            cursor: pointer;
        }

        .card {
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
            text-align: center;
        }

        .card-title {
            margin-bottom: 0;
        }

        .card-body {
            padding: 20px;
        }

        .custom-control-label::before {
            background-color: #007bff;
        }

    </style>
</head>
<body>
    <!-- Existing header content -->
    <nav class="navbar navbar-expand-md navbar-dark bg-dark" style="z-index:800">
        <div class="container">
            <a class="navbar-brand" href="#">ForumSystem</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContents">
                <form class="form-inline my-2 my-lg-0">
                    <div class="input-group">
                        <input type="text" class="form-control custom-rounded-corners" placeholder="Search" aria-label="Search" aria-describedby="button-search">

                        <div class="input-group-append">
                            <a class="btn btn-primary my-2 my-sm-0 ml-2 round-btn" href="#" role="button"><i class="fa-solid fa-magnifying-glass"></i></a>
                        </div>
                    </div>
                </form>
                <div class="button-container">
                    <!-- My Profile Button -->
                    <a class="btn btn-primary my-2 my-sm-0 ml-2" href="/profile" role="button" style="border-radius: 20px;">
                        <i class="fas fa-user"></i> My Profile
                    </a>
                    <!-- LogIn Button -->
                    <a class="btn btn-primary my-2 my-sm-0 ml-2 round-btn" href="/login" role="button">
                        <i class="fas fa-plus"></i>
                    </a>
                    <!-- Register Button -->
                    <a class="btn btn-primary my-2 my-sm-0 ml-2 round-btn" href="/register" role="button">
                        <i class="fa-regular fa-address-card"></i>
                    </a>
                </div>
            </div>
        </div>
    </nav>
    <!-- Additional navigation items here, below the header navbar -->


    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container">

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="btn btn-primary rounded-pill @(ViewBag.Title == "Home" ? "active" : "")" href="/" role="button" style="margin-right: 10px;">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-primary rounded-pill @(ViewBag.Title == "Recent" ? "active" : "")" href="#" role="button" style="margin-right: 10px;">Recent</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-primary rounded-pill @(ViewBag.Title == "Favourite" ? "active" : "")" href="#" role="button" style="margin-right: 10px;">Favourite</a>
                    </li>
                    <!-- Additional nav-item links here -->
                </ul>
            </div>
            <span class="navbar-text">
                Registered Users: @ViewBag.TotalUsers | Online Users: @ViewBag.UsersOnline
            </span>
        </div>
    </nav>

    <main>
        <div class="container mt-4">
            <button class="toggle-button" onclick="showLayout('currentProfileLayout')">Current Profile</button>
            <button class="toggle-button" onclick="showLayout('editProfileLayout')">Edit Profile</button>

            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <!-- Current Profile Layout -->
                    <div id="currentProfileLayout" class="profile-layout">
                        <div class="card">
                            <div class="card-header rounded-card-header">
                                Current Profile
                            </div>
                            <div class="card-body">
                                <div class="text-center">
                                    <img src="~/photos/profilepic.jpg" alt="Current Profile Picture" class="profile-pic img-fluid">
                                    <h4 class="card-title">Username Here</h4>
                                    <p>Firstname Here</p>
                                    <p>Lastname Here</p>
                                    <p>Email Here</p>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header rounded-card-header">
                                Create New Post
                            </div>
                            <div class="card-body">
                                <!-- Form for creating a new post -->
                                <form>
                                    <div class="form-group">
                                        <label for="postTitle">Title</label>
                                        <input type="text" class="form-control" id="postTitle" placeholder="Enter post title">
                                    </div>
                                    <div class="form-group">
                                        <label for="postContent">Content</label>
                                        <textarea class="form-control" id="postContent" rows="3"></textarea>
                                    </div>
                                    <!-- Toggle switch -->
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" id="postVisibility">
                                        <label class="custom-control-label" for="postVisibility">Public</label>
                                    </div>
                                    <button type="submit" class="btn btn-primary rounded-pill mt-3">Submit</button>
                                </form>
                            </div>
                        </div>
                        <!-- List of Posts -->
                        <div class="card">
                            <div class="card-header rounded-card-header">
                                List of Posts
                            </div>
                            <ul class="list-group list-group-flush">
                                @if (Model.Posts != null)
                                {
                                    @foreach (var post in Model.Posts)
                                    {
                                        <li class="list-group-item">
                                            <h5>@post.Title</h5>
                                            <p>@post.Content</p>
                                            <!-- Post meta data here -->
                                            <div>
                                                <span>UpVotes: @post.UpVote</span> |
                                                <span>DownVotes: @post.DownVote</span> |
                                                <span>IsActive: @post.IsActive</span>
                                            </div>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li class="list-group-item">
                                        <p>No posts available.</p>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>

                    <!-- Edit Profile Layout -->
                    <div id="editProfileLayout" class="profile-layout">
                        <div class="card">
                            <div class="card-header">
                                Edit Profile
                            </div>
                            <div class="card-body">
                                <form method="post" action="/updateProfile" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label for="profilePicture">New Profile Picture</label>
                                        <input type="file" class="form-control-file" id="profilePicture" name="profilePicture">
                                    </div>
                                    <div class="form-group">
                                        <label for="username">Username</label>
                                        <input type="text" class="form-control" id="username" name="username">
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Email address</label>
                                        <input type="email" class="form-control" id="email" name="email">
                                    </div>
                                    <div class="form-group">
                                        <label for="bio">Bio</label>
                                        <textarea class="form-control" id="bio" name="bio" rows="3"></textarea>
                                    </div>
                                    <!-- Add file input for new profile picture here -->
                                    <button type="submit" class="btn btn-primary rounded-pill">Update</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>


    <script>
        function showLayout(layoutId) {
            // Hide all profile layouts
            document.querySelectorAll('.profile-layout').forEach(function (layout) {
                layout.style.display = 'none';
            });

            // Show the selected layout
            document.getElementById(layoutId).style.display = 'block';
        }
    </script>
    <!-- Existing footer and script tags -->
</body>
</html>