@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using ForumSystem.Models


@model User
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Profile</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/profile.css" >
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    
    <!-- Add other head elements like meta tags, favicon here -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark" style="z-index:800">
            <div class="container">
                <a class="navbar-brand" href="#">ForumSystem</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContents">
                    <form class="form-inline my-2 my-lg-0">
                        <div class="input-group">
                            <input type="text" class="form-control custom-rounded-corners" placeholder="Search" aria-label="Search" aria-describedby="button-search">

                            <div class="input-group-append">
                                <a class="btn btn-primary my-2 my-sm-0 ml-2 round-btn" href="#" role="button"><i class="fa-solid fa-magnifying-glass"></i></a>
                            </div>
                        </div>
                    </form>
                    <div class="button-container">
                        <!-- My Profile Button -->
                        <a class="btn btn-primary my-2 my-sm-0 ml-2" href="/profile" role="button" style="border-radius: 20px;">
                            <i class="fas fa-user"></i> My Profile
                        </a>
                        <!-- LogIn Button -->
                        <a class="btn btn-primary my-2 my-sm-0 ml-2 round-btn" href="/login" role="button">
                            <i class="fas fa-plus"></i>
                        </a>
                        <!-- Register Button -->
                        <a class="btn btn-primary my-2 my-sm-0 ml-2 round-btn" href="/register" role="button">
                            <i class="fa-regular fa-address-card"></i>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
        <!-- Additional navigation items here, below the header navbar -->


        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container">

                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-primary rounded-pill @(ViewBag.Title == "Home" ? "active" : "")" href="/" role="button" style="margin-right: 10px;">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary rounded-pill @(ViewBag.Title == "Recent" ? "active" : "")" href="#" role="button" style="margin-right: 10px;">Recent</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary rounded-pill @(ViewBag.Title == "Favourite" ? "active" : "")" href="#" role="button" style="margin-right: 10px;">Favourite</a>
                        </li>
                        <!-- Additional nav-item links here -->
                    </ul>
                </div>
                <span class="navbar-text">
                    Registered Users: @ViewBag.TotalUsers | Online Users: @ViewBag.UsersOnline
                </span>
            </div>
        </nav>


    </header>
    <div class="container">
        <!-- Profile Section -->
        <div class="profile-section mt-3">
            <div class="row">
                <div class="col-md-4">
                    <div class="profile-header text-center">
                        <img src="data:image/jpeg;base64," alt="Stancho Geq" class="rounded-circle">
                        <h3>Stancho Geq</h3>
                        <p class="text-secondary">stanchofficial</p>
                        <button class="btn btn-outline-primary btn-sm">CHANGE AVATAR</button>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="post-creation-section mb-3">
                        <textarea class="form-control mb-2" placeholder="Create New Post"></textarea>
                        <button class="btn btn-primary btn-sm float-right">Post</button>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="public-switch" checked>
                            <label class="form-check-label" for="public-switch">PUBLIC</label>
                        </div>
                    </div>
                    <div class="post-analytics bg-light p-3">
                        <div class="row text-center">
                            <div class="col"><p>Reads <span class="badge badge-secondary">56</span></p></div>
                            <div class="col"><p>Comments <span class="badge badge-secondary">3</span></p></div>
                            <div class="col"><p>Likes <span class="badge badge-secondary">22</span></p></div>
                            <div class="col"><p>Dislikes <span class="badge badge-secondary">17</span></p></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="

https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>
