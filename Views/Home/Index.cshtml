@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ForumSystem.Models
@model IQueryable<Post>
<main role="main" class="container mt-4">
    <div class="row">
        <!-- Main content area -->
        <div class="col-md-8">

            <!-- Create New Post Section -->
            <div class="card mb-4">
                <div class="card-header">
                    Create New Post
                </div>
                <div class="card-body">
                    <!-- Form for creating a new post -->
                    <form>
                        <div class="form-group">
                            <label for="postTitle">Title</label>
                            <input type="text" class="form-control" id="postTitle" placeholder="Enter post title">
                        </div>
                        <div class="form-group">
                            <label for="postContent">Content</label>
                            <textarea class="form-control" id="postContent" rows="3"></textarea>
                        </div>

                        <!-- Toggle switch -->
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="postVisibility">
                            <label class="custom-control-label mt-2 mb-2" for="postVisibility">Public</label>
                        </div>

                        <button type="submit" class="btn btn-primary rounded-pill">Submit</button>

                    </form>
                </div>
            </div>
            <!-- List of Posts Section -->
            <div class="card mb-4">
                <div class="card-header">
                    List of Posts
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var post in Model)
                    {
                        <li class="list-group-item">
                            <h5>@post.Title</h5>
                            <p>@post.Content</p>
                            <!-- Post meta data here -->
                            <div>
                                <span>UpVotes: @post.UpVote</span> |
                                <span>DownVotes: @post.DownVote</span> |
                                <span>IsActive: @post.IsActive</span>
                            </div>
                        </li>
                    }
                </ul>
            </div>
            
        </div>

        <!-- Sidebar -->
        <div class="col-md-4 sticky-top">
            <!-- Hot Topics Section -->
            <div class="card mb-4">
                <div class="card-header">
                    Hot Topics
                </div>
                <div class="list-group list-group-flush">
                    @foreach (var post in Model)
                    {
                        <a href="#" class="list-group-item list-group-item-action">@post.Title</a>
                    }
                </div>
            </div>

           
        </div>
    </div>
</main>
