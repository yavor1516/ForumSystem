@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ForumSystem.Models
@model IList<Post>
<main role="main" class="container mt-4">
    <div class="row">
        <!-- Main content area -->
        <div class="col-md-8">
            <!-- Hero Section -->
            <div class="mb-4 p-5 bg-primary text-white rounded">
                <h1 class="display-4">Welcome to the Forum</h1>
                <p class="lead">The current time is @DateTime.Now.ToString("HH:mm") on @DateTime.Now.ToString("dddd, dd MMMM yyyy").</p>
            </div>

            <!-- Create New Post Section -->
            <div class="card mb-4">
                <div class="card-header">
                    Create New Post
                </div>
                <div class="card-body">
                    <!-- Form for creating a new post -->
                    <form>
                        <div class="form-group">
                            <label for="postTitle">Title</label>
                            <input type="text" class="form-control" id="postTitle" placeholder="Enter post title">
                        </div>
                        <div class="form-group">
                            <label for="postContent">Content</label>
                            <textarea class="form-control" id="postContent" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>

            <!-- Top Posts of the Day -->
            <div>
                <h2 class="mb-3">Top 3 Posts of the Day</h2>
                <!-- Example post (repeat for each top post) -->
                <div class="card mb-2">
                    <div class="card-body">
                        <h5 class="card-title">Post Title 1</h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="#" class="btn btn-primary">Read more</a>
                    </div>
                </div>
                <!-- Repeat for other top posts -->
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-md-4">
            <!-- Hot Topics Section -->
            <div class="card mb-4">
                <div class="card-header">
                    Hot Topics
                </div>
                <div class="list-group list-group-flush">
                    @foreach (var post in Model)
                    {
                        <a href="#" class="list-group-item list-group-item-action">@post.Title</a>
                    }
                </div>
            </div>

           
        </div>
    </div>
</main>
