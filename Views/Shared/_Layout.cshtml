@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using ForumSystem.Models
@model IQueryable<Post>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - ForumSystem</title>
    <!-- Reference to Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <!-- Add references to other Bootstrap CSS files if needed -->
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="#">ForumSystem</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContents">
                                       <form class="form-inline my-2 my-lg-0">
                        <div class="input-group">
                            <input type="text" class="form-control custom-rounded-corners" placeholder="Search" aria-label="Search" aria-describedby="button-search">

                            <div class="input-group-append">
                                <a class="btn btn-primary my-2 my-sm-0 ml-2 round-btn" href="#" role="button"><i class="fa-solid fa-magnifying-glass"></i></a>
                            </div>
                        </div>
                    </form>
                    <div class="button-container">
                        <!-- LogIn Button -->
                        <a class="btn btn-primary my-2 my-sm-0 ml-2 round-btn" href="#" role="button"><i class="fas fa-plus"></i></a>
                        <!-- Register Button -->
                        <a class="btn btn-primary my-2 my-sm-0 ml-2 round-btn" href="#" role="button"><i class="fa-regular fa-address-card"></i></a>

                    </div>
                </div>
            </div>
        </nav>
        <!-- Additional navigation items here, below the header navbar -->
       

        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container">
                
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-primary rounded-pill @(ViewBag.Title == "Home" ? "active" : "")" href="#" role="button" style="margin-right: 10px;">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary rounded-pill @(ViewBag.Title == "Recent" ? "active" : "")" href="#" role="button" style="margin-right: 10px;">Recent</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary rounded-pill @(ViewBag.Title == "Favourite" ? "active" : "")" href="#" role="button" style="margin-right: 10px;">Favourite</a>
                        </li>
                        <!-- Additional nav-item links here -->
                    </ul>
                </div>
                <span class="navbar-text">
                    Registered Users: @ViewBag.TotalUsers | Online Users: @ViewBag.UsersOnline
                </span>
            </div>
        </nav>


    </header>
   

    <main role="main" class="container mt-4" style="
    margin-left: 250px;">
        <div class="row">
            <!-- Top 3 Posts of the Day Section -->
            <div class="col-md-4 sticky-top">
                <div class="top-posts">
                    <h2 class="mb-3">Top 3 Posts of the Day</h2>
                    <!-- Example post (repeat for each top post) -->
                    <div class="card mb-2">
                        <div class="card-body">
                            
                            <p class="card-text">
                                @{
                                    int postNumber = 1;
                                }
                                @foreach (var post in Model.Take(3))
                                {
                                    
                                    <h5 class="card-title">Post @postNumber</h5>
                                    <a href="#" class="list-group-item list-group-item-action">@post.Title</a>
                                    postNumber++;
                                }
                            </p>
                            <a href="#" class="btn btn-primary">Read more</a>
                        </div>
                    </div>
                    <!-- Repeat for other top posts -->
                </div>
            </div>

            <!-- Main Content Section -->
            <div class="col-md-8">
                @RenderBody()
            </div>
        </div>

    </main>

    <footer>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

