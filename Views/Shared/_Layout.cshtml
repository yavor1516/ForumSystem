@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - ForumSystem</title>
    <!-- Reference to Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <!-- Add references to other Bootstrap CSS files if needed -->
    <link rel="stylesheet" href="~/css/style.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="#">ForumSystem</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContents">
                                       <form class="form-inline my-2 my-lg-0">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="button-search">
                            <div class="input-group-append">
                                <button class="btn btn-outline-success" type="submit" id="button-search">Search</button>
                            </div>
                        </div>
                    </form>
                    <div class="button-container">
                        <a class="btn btn-outline-primary my-2 my-sm-0" href="#" role="button">Sign In</a>
                        <a class="btn btn-primary my-2 my-sm-0 ml-2" href="#" role="button">Register</a>>
                    </div>
                </div>
            </div>
        </nav>
        <!-- Additional navigation items here, below the header navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #6c757d;">
            <div class="container">
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @("Home".Equals(ViewBag.Title, StringComparison.OrdinalIgnoreCase) ? "active" : "")" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @("Another Page".Equals(ViewBag.Title, StringComparison.OrdinalIgnoreCase) ? "active" : "")" href="#">Another Page</a>
                        </li>
                        <!-- Additional nav-item links here -->
                    </ul>
                </div>
            </div>
            <span class="navbar-text">
                Registered Users: @ViewBag.TotalUsers | Online Users: @ViewBag.UsersOnline
            </span>
        </nav>
    </header>
    

    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 bg-dark text-white">
        <div class="container">
            <span class="text-muted">&copy; @DateTime.Now.Year - Your Application Name</span>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

